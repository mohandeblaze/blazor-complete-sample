@page "/listview/17PropertyBinding"
@using Model

<h4 class="sample-title">List Property Binding</h4>

<EjsListView DataSource="@DataSource" ShowHeader="true" HeaderTitle="@HeaderTitle">
    <ListViewFieldSettings Id="Id" Text="Text"></ListViewFieldSettings>
</EjsListView>

<br />

<div>
    <button id="changevalue" class="e-btn e-info" @onclick="onClick">Change values</button>
</div>

@code {
    string HeaderTitle = "Listview header";

    Dictionary<string, object> HTMLProps = new Dictionary<string, object>() {
        {"style" , "border: 1px dashed blue"}
    };

    List<ListDataModel> DataSource = new List<ListDataModel>()
{
        new ListDataModel{ Id = "1", Text = "1"},
        new ListDataModel{ Id = "2", Text = "2"},
        new ListDataModel{ Id = "3", Text = "3"},
        new ListDataModel{ Id = "4", Text = "4"},
    };

    void onClick()
    {
        DataSource = new List<ListDataModel>()
        {
            new ListDataModel{ Id = "1", Text = "Changed 1"},
            new ListDataModel{ Id = "2", Text = "Changed 2"},
            new ListDataModel{ Id = "3", Text = "Changed 3"},
            new ListDataModel{ Id = "4", Text = "Changed 4"},
        };

        HeaderTitle = "This is new Header";
    }
}
