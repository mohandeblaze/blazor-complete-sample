@page "/listview/ListPropertyBinding"

<EjsListView DataSource="@dataSource" ShowHeader="true" HeaderTitle="@HeaderTitle">
    <ListViewFieldSettings Id="Id" Text="Text"></ListViewFieldSettings>
</EjsListView>

<br />

<div>
    <button @onclick="@onClick">Change values</button>
</div>

@code {
    [Inject]
    protected IJSRuntime JsRuntime { get; set; }

    string HeaderTitle = "Listview header";

    Dictionary<string, object> htmlattr = new Dictionary<string, object>() {
        {"style" , "border: 1px dashed blue"}
    };

    List<DataModel> dataSource = new List<DataModel>()
    {
        new DataModel{ Id = "1", Text = "1"},
        new DataModel{ Id = "2", Text = "2"},
        new DataModel{ Id = "3", Text = "3"},
        new DataModel{ Id = "4", Text = "4"},
    };

    void onClick()
    {
        dataSource = new List<DataModel>()
        {
            new DataModel{ Id = "1", Text = "Changed 1"},
            new DataModel{ Id = "2", Text = "Changed 2"},
            new DataModel{ Id = "3", Text = "Changed 3"},
            new DataModel{ Id = "4", Text = "Changed 4"},
        };

        HeaderTitle = "This is new Header";
    }

    class DataModel
    {
        public string Id { get; set; }
        public string Text { get; set; }
    }

}