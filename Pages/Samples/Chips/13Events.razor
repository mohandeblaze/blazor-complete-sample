@page "/Chips/13Events"

@using EjsButtons = Syncfusion.EJ2.Blazor.Buttons

<h4 class="sample-title">All Chips</h4>

<div class="control-section">
    <div id="chip-default-wrapper">
        <div class="chips-headers">Chips</div>
        <div class="sample-padding">
            @*initialize default chip component*@
            <EjsChipList>
                <ChipCollection>
                    <ChipListChip Text="Apple" CssClass="e-primary"></ChipListChip>
                    <ChipListChip Text="Microsoft" CssClass="e-info"></ChipListChip>
                    <ChipListChip Text="Google" CssClass="e-success"></ChipListChip>
                    <ChipListChip Text="Tesla" CssClass="e-warning"></ChipListChip>
                    <ChipListChip Text="Intel" CssClass="e-danger"></ChipListChip>
                </ChipCollection>
                <ChipListEvents OnClick="@OnClick" OnDelete="@OnDelete"></ChipListEvents>
            </EjsChipList>
        </div>
        <div class="chips-headers">Input Chips</div>
        <div class="sample-padding">
            @*initialize avatar chip component*@
            <EjsChipList EnableDelete="true" @ref="EjsChips" >
                <ChipCollection>
                    <ChipListChip Text="Anne" LeadingIconCss="anne"></ChipListChip>
                    <ChipListChip Text="Janet" LeadingIconCss="janet"></ChipListChip>
                    <ChipListChip Text="Laura" LeadingIconCss="laura"></ChipListChip>
                    <ChipListChip Text="Margaret" LeadingIconCss="margaret"></ChipListChip>
                </ChipCollection>
                <ChipListEvents OnClick="@OnClick" OnDelete="@OnDelete"></ChipListEvents>
            </EjsChipList>
        </div>
        <div class="chips-headers">Filter Chips</div>
        <div class="sample-padding">
            @*initialize filter chip component*@
            <EjsChipList Selection="Selection.Multiple" SelectedChips=@FilterSelected>
                <ChipCollection>
                    <ChipListChip Text="Extra Small"></ChipListChip>
                    <ChipListChip Text="Small"></ChipListChip>
                    <ChipListChip Text="Medium"></ChipListChip>
                    <ChipListChip Text="Large"></ChipListChip>
                    <ChipListChip Text="Extra Large"></ChipListChip>
                </ChipCollection>
                <ChipListEvents OnClick="@OnClick" OnDelete="@OnDelete"></ChipListEvents>
            </EjsChipList>
        </div>
        <div class="chips-headers">Choice Chips</div>
        <div class="sample-padding">
            @*initialize choice chip component*@
            <EjsChipList ID="chip-choice" CssClass="e-outline" Selection="Selection.Single" SelectedChips=@ChoiceSelected>
                <ChipCollection>
                    <ChipListChip Text="Send a text" LeadingIconCss="text"></ChipListChip>
                    <ChipListChip Text="Set a reminder" LeadingIconCss="alarm"></ChipListChip>
                    <ChipListChip Text="Read my emails" LeadingIconCss="mail"></ChipListChip>
                    <ChipListChip Text="Play a game" LeadingIconCss="game"></ChipListChip>
                </ChipCollection>
                <ChipListEvents OnClick="@OnClick" OnDelete="@OnDelete"></ChipListEvents>
            </EjsChipList>
        </div>
    </div>
</div>

@code{
    int[] ChoiceSelected = { 1 };
    int[] FilterSelected = { 1, 3 };

    EjsChipList EjsChips;

    void OnClick(EjsButtons.ClickEventArgs eventArgs)
    {
        Console.WriteLine(eventArgs.Text);
    }

    void OnDelete(EjsButtons.DeleteEventArgs eventArgs)
    {
        Console.WriteLine(eventArgs.Text);
        // eventArgs.Cancel = true;
        //EjsChips.Remove(eventArgs.Index);
    }
}

