@page "/HeatMap/13CalendarHeatmap"

<h4 class="sample-title">Heatmap Calendar</h4>

<div class="control-section">
    <div class="row">
        <div class="col-md-12">
            <EjsHeatMap ID="Container" DataSource="@HeatmapData" Height="300px">
                <HeatMapTitle Text="Annual Summary of User Activities in GitLab" TextStyle="@TextStyle"></HeatMapTitle>
                <HeatMapXAxis OpposedPosition="true" Minimum="@Xminimum" Maximum="@Xmaximum" IntervalType="@Syncfusion.EJ2.Blazor.HeatMap.IntervalType.Days" ValueType="@Syncfusion.EJ2.Blazor.HeatMap.ValueType.DateTime" LabelFormat="MMM" ShowLabelOn="@Syncfusion.EJ2.Blazor.HeatMap.LabelType.Months" Increment="7" LabelIntersectAction="@Syncfusion.EJ2.Blazor.HeatMap.LabelIntersectAction.Rotate45"></HeatMapXAxis>
                <HeatMapYAxis Labels="@yLabels" IsInversed="true"></HeatMapYAxis>
                <HeatMapPaletteSettings Type="@Syncfusion.EJ2.Blazor.HeatMap.PaletteType.Fixed" EmptyPointColor="white">
                    <HeatMapPalettes>
                        <HeatMapPalette Value="0" Color="rgb(238,238,238)" Label="No contributions"></HeatMapPalette>
                        <HeatMapPalette Value="1" Color="rgb(172, 213, 242)" Label="1-15 contributions"></HeatMapPalette>
                        <HeatMapPalette Value="16" Color="rgb(127, 168, 201)" Label="16-31 contributions"></HeatMapPalette>
                        <HeatMapPalette Value="32" Color="rgb(82, 123, 160)" Label="31-49 contributions"></HeatMapPalette>
                        <HeatMapPalette Value="50" Color="rgb(37, 78, 119)" Label="50+ contributions"></HeatMapPalette>
                    </HeatMapPalettes>
                </HeatMapPaletteSettings>
                <HeatMapCellSettings ShowLabel="false" Border="@border"></HeatMapCellSettings>
                <HeatMapLegendSettings ShowLabel="true" Position="@Syncfusion.EJ2.Blazor.HeatMap.LegendPosition.Bottom" Width="20%" Alignment="@Syncfusion.EJ2.Blazor.HeatMap.Alignment.Near" LabelDisplayType="@Syncfusion.EJ2.Blazor.HeatMap.LabelDisplayType.None" EnableSmartLegend="true"></HeatMapLegendSettings>
            </EjsHeatMap>
        </div>
    </div>
</div>
@code{

    string[] yLabels = new string[] { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };

    public FontModel TextStyle = new FontModel() { Size = "15px", FontWeight = "500", FontStyle = "Normal" };

    public object Xminimum = new DateTime(2017, 6, 23);

    public object Xmaximum = new DateTime(2018, 6, 30);

    public BorderModel border = new BorderModel() { Color = "White" };
    public object HeatmapData = HeatMapData.GetCalendarData();
}
