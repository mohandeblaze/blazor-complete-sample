@page "/Heatmap/11SimpleHeatmap"

<div class="control-section">
    <div class="row">
        <div class="col-md-12">
            <Ejsheatmap id="Container" DataSource="@HeatmapData" @ref="heatmap">
                <HeatMapXAxis Labels="@xLabels"></HeatMapXAxis>
                <HeatMapYAxis Labels="@yLabels"></HeatMapYAxis>
                <HeatMapTitle Text="Sales Revenue per Employee (in 1000 US$)"></HeatMapTitle>
            </Ejsheatmap>
        </div>
    </div>
</div>

@code{

    string[] xLabels = new string[] {"Nancy", "Andrew", "Janet", "Margaret", "Steven", "Michael", "Robert",
"Laura", "Anne", "Paul", "Karin", "Mario" };
    string[] yLabels = new string[] { "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
    EjsHeatMap heatmap;
    public object HeatmapData { get; set; }
    protected override void OnAfterRender()
    {
        HeatmapData = this.heatmap.DataSource = HeatMapData.GetDefaultData();
    }
}
